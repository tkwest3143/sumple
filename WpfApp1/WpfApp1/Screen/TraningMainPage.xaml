        <Label x:Name="TodayLabel" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="32" Width="137" BorderThickness="0,0,0,1" VerticalContentAlignment="Bottom" BorderBrush="Black" FontSize="16"/>
