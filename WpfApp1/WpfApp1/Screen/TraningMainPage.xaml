        <TextBox x:Name="UseWeightText" HorizontalAlignment="Left" Height="26" Margin="256,120,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="RepText" HorizontalAlignment="Left" Height="26" Margin="359,120,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="kg    ×" HorizontalAlignment="Left" Margin="306,120,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="53"/>
        <Button x:Name="RecordRegisterButton" Content="今日の記録を登録する" HorizontalAlignment="Left" Margin="247,187,0,0" VerticalAlignment="Top" Width="142" Height="30" Click="RecordRegisterButton_Click"/>

    </Grid>
</Page>
