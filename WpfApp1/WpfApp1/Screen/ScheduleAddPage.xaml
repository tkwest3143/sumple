            <TextBox x:Name="InputHour" HorizontalAlignment="Left" Height="23" Margin="122,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="23" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label Content="：" HorizontalAlignment="Left" Margin="145,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.19,0.195" Width="17" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="InputMinute" HorizontalAlignment="Left" Height="25" Margin="162,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="23" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Content="追加する" HorizontalAlignment="Left" Margin="278,270,0,0" VerticalAlignment="Top" Width="81" Height="33" Click="Button_Click"/>
